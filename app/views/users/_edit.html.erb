

<li class='hidden' id="c-4">
  <div class="tab-pane" id="4b">
    <div class="text-center">
      <h2>Edit your Profile</h2>
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-sm-offset-3">
            <%=  simple_form_for @user do |f|%>
            <%= f.input :first_name, label: false, placeholder: "First Name" %>
            <%= f.input :last_name, label: false, placeholder: "Last Name" %>
            <%= f.input :phone_number, label: false, placeholder: "Phone Number" %>
            <%= f.input :address, label: false, placeholder: "Address" %>
            <%= f.input :avatar, as: :attachinary %>
            <%= f.button :submit, "Submit", class: "btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</li>
