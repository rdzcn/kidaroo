<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
	<%= f.select :role, collection: User.roles.keys.to_a %>
	<%= f.input :email, required: true, label: false, placeholder: "email" %>
	<%= f.input :password, required: true,, label: false, placeholder: "password #{@minimum_password_length} characters minimum"  %>
	<%= f.input :password_confirmation, required: true, label: false, placeholder: "confirm your password" %>
</div>

<div class="form-actions">
	<%= f.button :submit, "Sign up" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
